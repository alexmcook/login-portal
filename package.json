{
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node --env-file=.env --enable-source-maps dist/index.js",
    "dev": "tsx watch --env-file=.env src/index.ts",
    "migrate:up": "dotenv -e .env -- node-pg-migrate up",
    "migrate:down": "dotenv -e .env -- node-pg-migrate down",
    "migrate:create": "dotenv -e .env -- node-pg-migrate create"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/pg": "^8.16.0",
    "ts-node": "^10.9.1",
    "tsx": "^3.12.7",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "fastify": "^5.6.2",
    "pg": "^8.11.0"
  }
}
